<odoo> 
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='employees_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_hr_employee_age"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_hr_employee_age"/>
                        <div class="text-muted">
                            Adds and computes age field on employee.
                        </div>
                    </div>
                </div>  
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_hr_employee_calendar_planning"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_hr_employee_calendar_planning"/>
                        <div class="text-muted">
                            Manage employee working time with profiles by date intervals.
                        </div>
                    </div>
                </div> 
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_hr_employee_digitized_signature"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_hr_employee_digitized_signature"/>
                        <div class="text-muted">
                            Add signature for the employee..
                        </div>
                    </div>
                </div>  
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_hr_course"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_hr_course"/>
                        <div class="text-muted">
                            Manage employee's training courses and all its validation process.
                        </div>
                    </div>
                </div>      
            </xpath>
        </field>
    </record>
</odoo>
